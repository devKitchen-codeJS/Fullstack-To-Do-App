enum RoleType {
  ADMIN
  USER
  MODERATOR
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Connection string for the database
}

model User {
  id String @id @default(uuid())

  email    String  @unique // Уникальный email
  password String? // Пароль. Может быть null, если используется только Google-auth

  // Поля для Google-аутентификации (OAuth)
  googleId String? @unique // Уникальный ID от Google

  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  todos Todo[] 

  role RoleType @default(USER) // Роль пользователя

  @@map("users") 
}

model Todo {
  id String @id @default(uuid())

  title       String
  description String?
  completed   Boolean   @default(false) // Статус выполнения
  dueDate     DateTime? // Срок выполнения

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String 
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Дополнительные поля для гибкости (например, для категорий/тегов)
  priority Int @default(0) // 0-низкий, 1-средний, 2-высокий

  @@map("todos") // Имя таблицы в БД
}
