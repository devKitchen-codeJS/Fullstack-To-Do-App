enum RoleType {
  ADMIN
  USER
  MODERATOR
  MARKETPLACEOWNER
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Connection string for the database
}

model User {
  id String @id @default(uuid())

  email    String  @unique // Уникальный email
  password String? // Пароль. Может быть null, если используется только Google-auth

  // Поля для Google-аутентификации (OAuth)
  googleId String? @unique // Уникальный ID от Google

  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  todos      Todo[]
  task_lists TaskList[]
    // userActivity UserActivity[]

  role RoleType @default(USER) // Роль пользователя

  @@map("users")
}

model Todo {
  id String @id @default(uuid())

  title       String
  description String?
  status      TaskStatus @default(PENDING) // Статус задачи
  priority    Priority   @default(LOW) // Приоритет задачи
  position    Int        @default(0) // Позиция задачи для сортировки
  dueDate     DateTime? // Срок выполнения

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Дополнительные поля для гибкости (например, для категорий/тегов)
  task_notes TaskNotes[]
  taskListId String? // Ссылка на список задач (если используется)
  taskList   TaskList?   @relation(fields: [taskListId], references: [id], onDelete: SetNull)

  @@map("todos") // Имя таблицы в БД
}

model TaskNotes {
  id String @id @default(uuid())

  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  todoId String?
  todo   Todo?   @relation(fields: [todoId], references: [id], onDelete: Cascade)

  @@map("task_notes") // Имя таблицы в БД
  /*
  Needed for fixes: 
  add relation to User model to track note ownership and ensure data integrity.
  add asignment of notes to specific users for better management.
  */
}

model TaskList {
  id String @id @default(uuid())

  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  todos Todo[]

  @@map("task_lists") // Имя таблицы в БД
}

